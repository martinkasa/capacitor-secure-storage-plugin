{
    "compilerOptions": {
        "rootDir": "src",
        "allowUnreachableCode": false,
        "declaration": true,
        "esModuleInterop": true,
        "inlineSources": true,
        "lib": [
            "dom",
            "ES2022"
        ],
        "module": "ES2022",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist/esm",
        "pretty": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2022"
    },
    "files": [
        "src/index.ts"
    ]
}
